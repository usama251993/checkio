{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Jest Current File",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "test",
        "--",
        "--config=${workspaceFolder}/jest.config.js",
        "--testPathPattern=${fileBasenameNoExtension}"
      ],
      "console": "integratedTerminal",
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "name": "Jest All Files",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "test",
        "--",
        "--config=${workspaceFolder}/jest.config.js"
      ],
      "console": "integratedTerminal",
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    }
  ]
}
